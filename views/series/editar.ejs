<%- include('../partials/header') %>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Editar Série</h2>
                <form method="POST">
                    <div class="form-group">
                        <label for="name">Nome da série</label>
                        <input name="name" type="text" class="form-control" id="name"  value="<%= serie.name %>"
                            aria-describedby="nameHelp">
                        <small id="nameHelp" class="form-text text-muted">
                            Nome da série a ser salva.
                        </small>
                        <% if(errors && errors.indexOf('name') >= 0) {  %>
                            <small id="nameHelp" class="form-text text-muted">
                                Por favor, informe o nome da série
                            </small>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Situação</label>
                        <select class="form-control" id="status" name="status">
                            <% labels.forEach( label => { %> 
                                <option value="<%= label.id %>"  <% if(label.id === serie.status) { %> selected="selected" <% } %>><%= label.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <button class="btn btn-info">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>